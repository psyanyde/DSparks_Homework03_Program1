<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/etMajorName" android:hint="Major Name" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etMajorPrefix" android:hint="Major Prefix (CIS, BUS, ...)" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnAddMajor" android:text="Add Major" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="end" android:layout_marginTop="12dp"/>

</LinearLayout>
